<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/10" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <VBox spacing="20.0">
               <children>
                  <Button fx:id="add_shift_button" mnemonicParsing="false" text="%add_shift_text" />
                  <Button fx:id="delete_shift_button" mnemonicParsing="false" text="%del_shift_text" />
                  <Button fx:id="update_shift_button" mnemonicParsing="false" text="%upd_shift_text" />
               </children>
               <padding>
                  <Insets right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox fx:id="list_view_container" spacing="20.0">
               <padding>
                  <Insets right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </BorderPane.margin>
      </HBox>
   </center>
</BorderPane>
